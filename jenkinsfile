pipeline
{
    agent any
    stages
{
    stage('scm checkout')
    {steps
    {sh 'echo code is loading'}
    }

    stage('build the code')
    {steps
    {sh 'echo code is building'
    sh 'echo code is passed'}

    }
    stage('deploy to dev')
    {steps
    {sh 'echo deploying artifact to dev'}
}
    stage('approve qa')
    {steps
    {input 'approve the code'}
}
stage('deploy to qa')
    {steps
    {sh 'echo deploying artifact to qa'}
}
   stage('approve release manager')
    {steps
    {input 'apprvoe code'}
}
   stage('approve qa')
    {steps
    {input 'apprvoe code'}
}
}
}
